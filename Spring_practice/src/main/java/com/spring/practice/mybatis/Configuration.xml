<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 별명을 붙여서 짧게 쓰도록 type 별칭 등록-->
	<typeAliases>
		<typeAlias type="com.spring.practice.users.dto.UsersDto" alias="usersDto"/>
		<typeAlias type="com.spring.practice.file.dto.FileDto" alias="fileDto"/>
	</typeAliases>
	
	<!-- 사용할 Mapper 목록 설정  -->
	<mappers>
		<mapper resource="com/spring/practice/mybatis/UsersMapper.xml" />
		<mapper resource="com/spring/practice/mybatis/FileMapper.xml" />
	</mappers>
	
</configuration>